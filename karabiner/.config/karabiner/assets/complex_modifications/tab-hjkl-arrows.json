{
  "title": "Caps Lock as Escape / HJKL Arrow Keys Layer",
  "rules": [
    {
      "description": "Caps Lock: Escape when tapped, HJKL â†’ Arrow Keys when held",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "caps_lock" },
          "to": [
            {
              "set_variable": { "name": "caps_layer", "value": 1 }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": { "name": "caps_layer", "value": 0 }
            }
          ],
          "to_if_alone": [
            { "key_code": "escape" }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "h" },
          "to": [{ "key_code": "left_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "caps_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "j" },
          "to": [{ "key_code": "down_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "caps_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "k" },
          "to": [{ "key_code": "up_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "caps_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "l" },
          "to": [{ "key_code": "right_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "caps_layer", "value": 1 }
          ]
        }
      ]
    }
  ]
}
